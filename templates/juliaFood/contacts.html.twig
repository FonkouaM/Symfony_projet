{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}
        
            {% block banniere %}
                <div class="banniere" id="banniere" style="background-image: url({{asset('JuliaFood/Pictures/bg2.jpg')}});">
                <h1>Bienvenu chez Julia Food !</h1>
                    <p>Nos contacts...</p>
                </div>
            {% endblock %}
        
    {% block body %}  
            <section>
                <h2>Formulaire</h2>
                <div class="line_color"></div>
                <form action="">
                    <div class="form">
                        <input type="text" name="name" placeholder="Entrez votre nom" class="input" required>
                        <input type="tel" name="phone" placeholder="Entrez votre numero mobile" class="input">
                        <input type="email" name="name" placeholder="Entrez votre email" class="input" required>
                        <textarea name="message" id="message" cols="30" rows="10" required></textarea>
                        <input type="submit" name="button" value="Envoyer" class="btn-form">
                    </div>
                </form>
            </section>
            <section>
                <h2>Localisation</h2>
                <div class="line_color"></div>

                <div class="local">
                    <div class="map">
                        <img src="{{asset('JuliaFood/Pictures/carte_map.png')}}" alt="">
                    </div>
                    <div class="map">
                        <iframe id="maps" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d994.9568577724257!2d9.
                        69594147925423!3d4.055587824135401!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.
                        1!3m3!1m2!1s0x1061125ec6799a23%3A0xd0381fdfd58d60ee!2sRue%20Franqueville%2C%20Douala!5e0!3m2!
                        1sfr!2scm!4v1616615498993!5m2!1sfr!2scm" width="700vh" height="475vh" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </section>

        
{% endblock %}